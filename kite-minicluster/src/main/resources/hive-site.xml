<configuration>
  <property>
    <!-- This has to be specified in a site file, since otherwise the HiveServer2 in
    minicluster doesn't pick it up correctly. The underlying problem is that
    HiveAuthFactory calls 'new HiveConf()'. This is fixed by
    https://issues.apache.org/jira/browse/HIVE-6657, in Hive 0.14. -->
    <name>hive.server2.authentication</name>
    <value>NOSASL</value>
  </property>
</configuration>